generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cast {
  id                 Int       @id @default(autoincrement())
  adult              Boolean
  gender             Int
  themoviedbId       Int
  knownForDepartment String
  name               String
  originalName       String
  popularity         Float
  profilePath        String?
  castId             Int
  character          String
  creditId           String
  order              Int
  movieId            Int       // Foreign key
  Movie              Movie     @relation(fields: [movieId], references: [id])
}

model Crew {
  id                 Int       @id @default(autoincrement())
  adult              Boolean
  gender             Int
  themoviedbId       Int
  knownForDepartment String
  name               String
  originalName       String
  popularity         Float
  profilePath        String?
  creditId           String
  department         String
  job                String
  movieId            Int       // Foreign key
  Movie              Movie     @relation(fields: [movieId], references: [id])
}


model Movie {
  id               Int       @id @default(autoincrement())
  adult            Boolean
  backdropPath     String
  genreIds         Int[]
  idThemoviedb     Int
  originalLanguage String
  originalTitle    String
  overview         String
  popularity       Float
  posterPath       String
  releaseDate      DateTime
  title            String
  video            Boolean
  voteAverage      Float
  voteCount        Int
  rating           Float
  cast             Cast[]    // Relation to Cast
  crew             Crew[]    // Relation to Crew
}
